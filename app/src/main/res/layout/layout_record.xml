<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/sv_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.elong.view.TouchProgressBar
        android:id="@+id/tpv_record"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="@dimen/size_btn_record"
        android:layout_height="@dimen/size_btn_record"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_record_btn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/progress_bg"
        android:max="10000"
        android:indeterminate="false"
        android:indeterminateOnly="false"
        android:indeterminateBehavior="cycle"
        android:progressDrawable="@drawable/progress_shape"/>

</RelativeLayout>